	<issueManagement>
		<system>SF</system>
		<url>https://sourceforge.net/tracker/?group_id=85345</url>
	</issueManagement>

	<profiles>
		<profile>
			<!-- this is to first 'deploy' locally and then manually 'rsync' with 
				a remote m2repo; it works faster this way (compared to "mvn deploy" going 
				directly to biopax.sf.net/m2repo/...) -->
			<id>rodche</id>
			<distributionManagement>
				<snapshotRepository>
					<id>biopax.snapshots</id>
					<name>Local BioPAX Snapshots Repository</name>
					<url>file:///Volumes/Work/m2repo-biopax/snapshots</url>
				</snapshotRepository>
				<repository>
					<id>biopax.releases</id>
					<name>Local BioPAX Repository</name>
					<url>file:///Volumes/Work/m2repo-biopax/releases</url>
				</repository>
				<!-- I set login/passwd in my ~/.m2/settings.xml, 
				<servers> section (id values there should match id below) -->
				<site>
					<id>biopax.sf.net</id>
					<name>BioPAX Sourceforge site</name>
					<url>scp://shell.sourceforge.net/home/project-web/biopax/htdocs/paxtools</url>
				</site>
			</distributionManagement>
			<properties>
				<scm.username>rodche</scm.username>
			</properties>
		</profile>
		<profile>
			<id>emekdemir</id>
			<distributionManagement>
				<site>
					<id>sourceforge.net</id>
					<name>BioPAX Sourceforge site</name>
					<url>scp://emekdemir@shell.sourceforge.net/home/project-web/biopax/htdocs/paxtools</url>
				</site>
			</distributionManagement>
			<properties>
				<scm.username>emekdemir</scm.username>
			</properties>
		</profile>
	</profiles>

    <scm>
        <connection>scm:hg:http://biopax.hg.sourceforge.net:8000/hgroot/biopax/paxtools</connection>
        <developerConnection>
            scm:hg:ssh://${scm.username},biopax@biopax.hg.sourceforge.net/hgroot/biopax/paxtools
        </developerConnection>
        <url>http://biopax.hg.sourceforge.net/hgweb/biopax/paxtools</url>
    </scm>

    <organization>
        <name>BioPAX</name>
        <url>http://www.biopax.org</url>
    </organization>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>2.3.2</version>
                    <configuration>
                        <source>1.5</source>
                        <target>1.5</target>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    
    <dependencies>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
