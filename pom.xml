<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.biopax.paxtools</groupId>
	<artifactId>pattern</artifactId>
	<version>2.0.0-SNAPSHOT</version>

	<url>https://github.com/BioPAX/pattern</url>

	<issueManagement>
		<system>GitHub Issues</system>
		<url>https://github.com/BioPAX/pattern/issues</url>
	</issueManagement>	

	<ciManagement>
		<system>Travis CI</system>
        <url>https://travis-ci.org/BioPAX/pattern</url>
	</ciManagement>

   	<scm>
		<connection>scm:git:git://github.com/BioPAX/pattern.git</connection>
		<developerConnection>scm:git:git@github.com:BioPAX/pattern.git</developerConnection>
		<url>https://github.com/BioPAX/pattern.git</url>
	</scm>

	<repositories>
		<repository>
			<id>central</id>
			<name>Maven Repository Switchboard</name>
			<layout>default</layout>
			<url>http://repo1.maven.org/maven2/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
        <repository>
            <id>maven-repository.dev.java.net</id>
            <name>Java.net Maven 2 Repository</name>
            <url>http://download.java.net/maven/2</url>
        </repository>
        <repository>
            <id>ossrh</id>
            <name>OSSRH Repository</name>
            <url>https://oss.sonatype.org/content/groups/public/</url>
        </repository>
	</repositories>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
					</configuration>
				</plugin>
				<plugin>
					<artifactId>maven-assembly-plugin</artifactId>
					<version>2.2-beta-5</version>
					<configuration>
						<finalName>biopax-pattern-${project.version}</finalName>
						<appendAssemblyId>false</appendAssemblyId>
						<descriptorRefs>
							<descriptorRef>jar-with-dependencies</descriptorRef>
						</descriptorRefs>
						<archive>
							<manifest>
								<mainClass>org.biopax.paxtools.pattern.miner.Dialog</mainClass>
								<addClasspath>true</addClasspath>
							</manifest>
						</archive>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.biopax.paxtools</groupId>
			<artifactId>paxtools-core</artifactId>
			<version>[4,)</version>
		</dependency>
		<dependency>
			<groupId>org.biopax.paxtools</groupId>
			<artifactId>paxtools-trove</artifactId>
			<version>[4,)</version>
			<scope>test</scope>
		</dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.17</version>
            <scope>runtime</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    
    <distributionManagement>
        <repository>
            <id>pattern.repo</id>
            <name>Pattern repository</name>
            <url>file://${basedir}/maven-repo/</url>
        </repository>
    </distributionManagement>

	<profiles>
		<profile>
			<id>ossrh</id>
			<distributionManagement>
				<site>
					<!-- Do mvn site site:stage -DstagingDirectory=/tmp/path first 
					(site-deploy immediately pushes to gh-pages on GitHub)-->
					<id>github</id>
					<name>BioPAX/pattern GitHub Pages</name>
					<url>${project.version}</url>
					<!--	temporarily change to full URL for site:stage to work
					<url>http://biopax.github.io/pattern/${project.version}</url>
				-->
				</site>
        		<repository>
            		<id>ossrh</id>
            		<name>Nexus Release Repository</name>
            		<url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        		</repository>
        		<snapshotRepository>
            		<id>ossrh</id>
            		<name>Sonatype Nexus Snapshots</name>
            		<url>https://oss.sonatype.org/content/repositories/snapshots/</url>
        		</snapshotRepository>
        		<downloadUrl>http://www.biopax.org/downloads/</downloadUrl>
			</distributionManagement>	
		</profile>
		<profile>
			<id>local-deploy</id>
			<distributionManagement>
				<!-- define the $variables in ~/.m2/settings.xml or via profile-->
				<snapshotRepository>
					<id>biopax.snapshots</id>
					<name>Local Snapshots Repository</name>
					<url>${biopax.snapshot.url}</url>
				</snapshotRepository>
				<repository>
					<id>biopax.releases</id>
					<name>Local Releases Repository</name>
					<url>${biopax.release.url}</url>
				</repository>
			</distributionManagement>
		</profile>
	</profiles>
    
</project>
