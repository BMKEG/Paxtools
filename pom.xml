<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.biopax.paxtools</groupId>
    <artifactId>paxtools</artifactId>
    <version>2.0-SNAPSHOT</version>

    <name>BioPAX PaxTools (multi-module project)</name>
    <packaging>pom</packaging>
    <url>http://www.biopax.org/paxtools</url>

    <modules>
        <module>paxtools-core</module>
        <module>validator-client</module>
        <module>paxtools-jena-io</module>
        <module>paxtools-simple-io</module>
        <module>sif-converter</module>
        <!--<module>biopax-persistence</module>-->
        <module>pathwaycommons-client</module>
        <module>biopax-converter</module>
        <!--<module>psimi-converter</module>-->
        <module>paxtools-main</module>
        <module>paxtools-query</module>
    </modules>

    <developers>
        <developer>
            <id>rodche</id>
            <name>Igor Rodchenkov</name>
            <organization>University of Toronto</organization>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
        <developer>
            <id>emekdemir</id>
            <name>Emek Demir</name>
            <organization>CBIO MSKCC</organization>
            <roles>
                <role>architect</role>
                <role>developer</role>
            </roles>
        </developer>
    </developers>

    <profiles>
        <profile>
            <id>rodche</id>
            <distributionManagement>
                <snapshotRepository>
                    <id>biopax.snapshots</id>
                    <name>Local BioPAX Snapshots Repository</name>
                    <url>file:///Volumes/Work/m2repo-biopax/snapshots</url>
                </snapshotRepository>
                <repository>
                    <id>biopax.releases</id>
                    <name>Local BioPAX Repository</name>
                    <url>file:///Volumes/Work/m2repo-biopax/releases</url>
                </repository>
            </distributionManagement>
            <properties>
                <scm.username>rodche</scm.username>
            </properties>
        </profile>
        <profile>
            <id>emekdemir</id>
            <distributionManagement>
                <site>
                    <id>sourceforge.net</id>
                    <name>BioPAX Sourceforge site</name>
                    <url>scp://emekdemir@shell.sourceforge.net/home/groups/b/bi/biopax/htdocs/paxtools</url>
                </site>
            </distributionManagement>
            <properties>
                <scm.username>emekdemir</scm.username>
            </properties>
        </profile>
    </profiles>

    <scm>
        <connection>scm:hg:http://biopax.hg.sourceforge.net:8000/hgroot/biopax/paxtools</connection>
        <developerConnection>
            scm:hg:ssh://${scm.username},biopax@biopax.hg.sourceforge.net/hgroot/biopax/paxtools
        </developerConnection>
        <url>http://biopax.hg.sourceforge.net/hgweb/biopax/paxtools</url>
    </scm>

    <organization>
        <name>BioPAX</name>
        <url>http://www.biopax.org</url>
    </organization>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <configuration>
                        <source>1.5</source>
                        <target>1.5</target>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    
    <dependencies>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1.1</version>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.13</version>
            <scope>runtime</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.7</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
      
    <repositories>
       <repository>
          <id>jboss-public-repository-group</id>
          <name>JBoss Public Maven Repository Group</name>
          <url>https://repository.jboss.org/nexus/content/groups/public</url>
          <layout>default</layout>
          <releases>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </repository>
    </repositories>
         
    <distributionManagement>
	</distributionManagement>
</project>

