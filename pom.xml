<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.biopax.paxtools</groupId>
    <artifactId>paxtools</artifactId>
    <version>2.0-SNAPSHOT</version>

    <name>PaxTools</name>
    <packaging>pom</packaging>
    <description>Paxtools is a Java library that allows software to read, write, analyze and manipulate BioPAX models. Paxtools provide a consistent, fully implemented, validating BioPAX API that significantly reduces development time of oftware  that require programmatic access to BioPAX. Paxtools is modular, lightweight and platform independent to be easily embedded into applications.</description>
    <url>http://www.biopax.org/paxtools</url>

    <modules>
        <module>paxtools-core</module>
        <module>paxtools-jena-io</module>
        <module>paxtools-simple-io</module>
        <module>sif-converter</module>
        <module>gsea-converter</module>
        <module>pathwaycommons-client</module>
        <module>biopax-converter</module>
        <module>psimi-converter</module>
        <module>paxtools-console</module>
        <module>paxtools-query</module>
        <!--<module>paxtools-editor</module>-->
    </modules>

