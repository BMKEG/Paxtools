		</developer>
		<developer>
			<id>ozgunbabur</id>
			<name>Ozgun Babur</name>
			<organization>CBIO MSKCC</organization>
			<roles>
				<role>developer</role>
			</roles>
		</developer>
		<developer>
			<id>kenichirofukuda</id>
			<name>Ken-Ichiro Fukuda</name>
